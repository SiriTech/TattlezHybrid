<?xml version='1.0' encoding='utf-8'?>
<widget id="com.srikanth.tattlez" version="1.0.0" versionCode = "1"  xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Tattlez</name>
    <description>
        Cross Platform messenger
    </description>
    <author email="srikanth.k@motivitylabs.com" href="http://motivitylabs.com">
        Mobility Team at Motivity
    </author>

    <!-- Global preferences -->
    <preference name="Fullscreen" value="false" />
    <preference name="Orientation" value="portrait" />
	<preference name="keepRunning" value="true" />
    <!-- Multi-Platform preferences -->
    <preference name="DisallowOverscroll" value="true" />
	
    <!-- iOS -->
    <preference name="EnableViewportScale" value="true"/>
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />

    <icon src="icon.png" />

    <platform name="android">
        <icon src="res/icon/android/icon-36-ldpi.png" density="ldpi" />
        <icon src="res/icon/android/icon-48-mdpi.png" density="mdpi" />
        <icon src="res/icon/android/icon-72-hdpi.png" density="hdpi" />
        <icon src="res/icon/android/icon-96-xhdpi.png" density="xhdpi" />
    </platform>

    <platform name="ios">
        <icon src="res/icon/ios/Icon.png" width="57" height="57" />
        <icon src="res/icon/ios/Icon@2x.png" width="114" height="114" />
        <icon src="res/icon/ios/Icon-Small.png" width="29" height="29" />
        <icon src="res/icon/ios/Icon-Small@2x.png" width="58" height="58" />
        <icon src="res/icon/ios/Icon-Small-50.png" width="50" height="50" />
        <icon src="res/icon/ios/Icon-Small-50@2x.png" width="100" height="100" />
        <icon src="res/icon/ios/Icon-40.png" width="40" height="40" />
        <icon src="res/icon/ios/Icon-40@2x.png" width="80" height="80" />
        <icon src="res/icon/ios/Icon-60.png" width="60" height="60" />
        <icon src="res/icon/ios/Icon-60@2x.png" width="120" height="120" />
        <icon src="res/icon/ios/Icon-72.png" width="72" height="72" />
        <icon src="res/icon/ios/Icon-72@2x.png" width="144" height="144" />
        <icon src="res/icon/ios/Icon-76.png" width="76" height="76" />
        <icon src="res/icon/ios/Icon-76@2x.png" width="152" height="152" />
    </platform>
	 <!-- Cordova-device plugin -->
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
        <param name="ios-package" value="CDVDevice" />
    </feature>
            
    

	<access origin="*" />
    <content src="index.html" />
</widget>
